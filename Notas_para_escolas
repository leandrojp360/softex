
nota1 = prompt("Qual a primeira nota? ");

nota2 = prompt("Qual a segunda nota? ");

nota3 = prompt("Qual a terceira nota? ");

media = ((nota1+nota2+nota3)/2);

resultado = (media>=7) ? "APROVADO" : "REPROVADO";

window.alert(resultado);

